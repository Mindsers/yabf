{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "standard",
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "spaced-comment": [
      "error",
      "always",
      {
        "markers": [
          "/"
        ]
      }
    ]
  }
}
